<h1>Log In</h1>

<%= form_for @conn, Routes.session_path(@conn, :create), [as: :session, class: "login-box"], fn f -> %>
    <%= hidden_input f, :hellosign_signature_id, value: assigns[:hellosign_signature_id] %>
    <%= text_input f, :email, placeholder: "Email" %>
    <%= password_input f, :password, placeholder: "Password" %>
    <%= password_input f, :totp, placeholder: "Time-Based One-Time Password" %>
    <%= submit "Log in" %>
<% end %>
